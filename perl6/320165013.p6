#!perl6

for 0 .. 6 -> $n {
	my $N = 6*($n+1);
	say "$N: $n -> ", make_number( $n );
	}

sub make_number ($n) {
	my $number =
		10**0        * ('3'x($n+1))   +
		10**($n+1)   * 1              +

		10**(2*$n+2) * 5              +
		10**(2*$n+3) * ('6'x(2*$n+1)) +
		10**(4*$n+4) * 1              +
		10**(5*$n+5) * 2              +
		10**(5*$n+6) * ('3'x($n))     +
		0;
	}
